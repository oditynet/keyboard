<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android"
    android:shape="rectangle">

    <!-- Заливка - темно-серая с прозрачностью -->
    <solid android:color="#CC333333"/>

    <!-- Скругленные углы -->
    <corners android:radius="12dp"/>

    <!-- Тонкая обводка для контраста -->
    <stroke
        android:width="1dp"
        android:color="#66FFFFFF"/>

    <!-- Отступы внутри подсказки -->
    <padding
        android:left="12dp"
        android:top="8dp"
        android:right="12dp"
        android:bottom="8dp"/>

</shape>